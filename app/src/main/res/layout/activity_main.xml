<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hellaboredguy.helloandroid.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UDACITY"
        android:fontFamily="serif-monospace"
        android:textSize="36sp"
        android:padding="20dp"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/udacity"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2456 Latham Street"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"
        android:paddingStart="20dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mountain View, CA 94043"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"
        android:paddingStart="20dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="650-555-5555"
        android:fontFamily="serif-monospace"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:textColor="@android:color/black"
        />

</LinearLayout>
